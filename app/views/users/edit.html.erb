<div class="container">
  <div class="col-sm-12 col-md-8 col-md-offset-2">
    <div class="profile-content col-md-12">
      <div class="left-content col-sm-12 col-md-6">
        <div class="user-image">
          <% if current_user.profile_image == nil %>
            <%= image_tag '/user1.png', class: "user-pic", height: "200" %>
          <% else %>
            <%= attachment_image_tag @user, :profile_image, :fill, 200, 200, format: 'jpg', class: "user-pic" %>
          <% end %>
        </div>
        <%= link_to user_path(current_user) do %>
          <div class="ui teal button" id="mypage-btn">マイページ</div>
        <% end %>
      </div>
      <div class="right-content col-sm-12 col-md-6">
        <h3 class="title">登録情報変更</h3>
        <div class="profile-info">
          <%= form_for(@user) do |f| %>
          <label>ユーザーネーム</label>
          <%= f.text_field :user_name, class: "form-control" %>
          <label>姓</label>
          <%= f.text_field :last_name, class: "form-control" %>
          <label>名</label>
          <%= f.email_field :first_name, class: "form-control" %>
          <label>住居都市</label>
          <%= f.text_field :living_city, class: "form-control" %>
          <label>住所</label>
          <%= f.text_field :address, class: "form-control" %>
          <label>生年月日</label>
          <%= f.text_field :birthday, class: "form-control" %>
          <label>自己紹介</label>
          <%= f.text_field :introduction, class: "form-control" %>
          <label></label>
          <%= f.submit "更新", class: "btn ui orange button btn-block edit-btn" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>






