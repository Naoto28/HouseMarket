<div class="container">
  <div class="col-sm-12 col-md-8 col-md-offset-2">
    <div class="profile-content col-md-12">
      <div class="left-content col-sm-12 col-md-6">
        <div class="user-image">
          <% if current_user.profile_image == nil %>
            <%= image_tag '/user1.png', class: "user-pic", height: "200" %>
          <% else %>
            <%= attachment_image_tag @user, :profile_image, :fill, 200, 200, format: 'jpg', class: "user-pic" %>
          <% end %>
        </div>
        <%= link_to user_path(current_user) do %>
          <div class="ui teal button" id="mypage-btn"><i class="far fa-address-card mypage-icon"></i></div>
        <% end %>
        <%= link_to message_path(current_user) do %>
        <div class="ui blue button" id="message-btn"><i class="far fa-envelope mail-icon"></i></div>
        <% end %>
        <div class="ui red button" id="favorite-btn"><i class="far fa-heart heart-icon"></i></div>
        <%= link_to estates_path do %>
          <div class="ui orange button" id="edit-btn"><i class="fas fa-home wrench-icon"></i></div>
        <% end %>
      </div>
      <div class="right-content col-sm-12 col-md-6">
        <h3 class="profile-title">登録情報変更</h3>
        <div class="profile-info">
          <%= form_for(@user) do |f| %>
          <label>ユーザーネーム</label>
          <%= f.text_field :user_name, class: "form-control" %>
          <label>姓</label>
          <%= f.text_field :last_name, class: "form-control" %>
          <label>名</label>
          <%= f.text_field :first_name, class: "form-control" %>
          <label>住居都市</label>
          <%= f.collection_select :living_city, Prefecture.all, :name, :name, {} ,{:class => "form-control living_city"} %>
          <label>住所</label>
          <%= f.text_field :address, class: "form-control" %>
          <label>生年月日</label>
          <%= f.date_field :birthday, value: @user.birthday.strftime, class: "form-control" %>
          <label>自己紹介</label>
          <%= f.text_field :introduction, class: "form-control" %>
          <label></label>
          <%= f.submit "更新", class: "btn ui yellow button btn-block edit-btn" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>






