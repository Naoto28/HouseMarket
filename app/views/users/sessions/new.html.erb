<div class="log_in_body">
  <div class="container log_in_content">
    <div class="col-sm-12 col-md-5">
    <div class="log_in_form col-sm-12 cols-md-10">
        <%= link_to new_user_registration_path do %>
          <div class="new-registration-btn ui black button btn-block"><span>新規登録の方はこちら</span></div>
        <% end %>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :メールアドレス, class: "form_label" %><br/>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :パスワード, class: "form_label" %><br/>
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field log_in_group">
            <%= f.check_box :remember_me %>
            <%= f.label :ログイン情報を記憶する, class: "form_remember" %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "ログイン", class: "ui orange button log_in_btn" %>
        </div>
      <% end %>
    </div>
    </div>
  </div>
</div>
