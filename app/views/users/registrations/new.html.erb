<div class="sign_up_body">
  <div class="container sign_up_content">
    <div class="col-sm-12 col-md-5 col-md-offset-7">
      <div class="sign_up_form col-sm-12 cols-md-10">
        <%= link_to new_user_session_path do %>
          <div class="new-registration-btn ui black button btn-block"><span>すでに会員の方はこちら</span></div>
        <% end %>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <%= f.label :姓, class: "form_label"  %><br />
            <%= f.email_field :last_name, autofocus: true, autocomplete: "off", class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label :名, class: "form_label"  %><br />
            <%= f.email_field :first_name, autofocus: true, autocomplete: "off", class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label :メールアドレス, class: "form_label" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label :パスワード, class: "form_label" %>
            <% if @minimum_password_length %>
            <!-- <em>(<%= @minimum_password_length %> characters minimum)</em> -->
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "数字6文字以上" %>
          </div>

          <div class="field">
            <%= f.label :パスワード（確認用）, class: "form_label" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "数字6文字以上" %>
          </div>

          <div class="actions sign_up_btn">
            <%= f.submit "登録する", class: "ui orange button sign_up_btn" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
