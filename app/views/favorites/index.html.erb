<div class="container">
  <div class="col-sm-12 col-md-8 col-md-offset-2">
    <div class="profile-content col-md-12">
      <div class="left-content col-sm-12 col-md-6">
        <div class="user-image">
            <%= image_tag '/home.png', class: "user-pic", height: "200" %>

          <%= link_to user_path(current_user) do %>
            <div class="ui teal button" id="mypage-btn"><i class="far fa-address-card mypage-icon"></i></div>
          <% end %>
          <%= link_to message_path(current_user) do %>
            <div class="ui blue button" id="message-btn"><i class="far fa-envelope mail-icon"></i></div>
          <% end %>
          <%= link_to estates_path do %>
            <div class="ui orange button" id="edit-btn"><i class="fas fa-home wrench-icon"></i></div>
          <% end %>
          <%= link_to root_path do %>
            <div class="ui grey button" id="edit-btn"><i class="fas fa-desktop wrench-icon"></i></div>
          <% end %>
          </div>
      </div>

      <div class="right-content col-sm-12 col-md-6">
        <h3 class="profile-title">お気に入り登録</h3>
        <table class="ui celled striped table" style="table-layout:fixed;width:100%;">
          <thead>
            <tr>
              <th colspan="1" style="width :72%;">不動産名</th>
              <th colspan="1" style="width :30%;">登録日時</th>
            </tr>
          </thead>
          <tbody>
            <% @estates.each do |f| %>
              <tr id="messaege" style="cursor: pointer;">
                <td class="collapsing" id="pages"><%= link_to estate_path(f) do %><i class="home icon" ></i> <%= f.name %></td>
                <td><%= f.created_at.strftime('%Y/%m/%d') %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="page" id="back"><i class="fas fa-angle-left"></i></div>
        <div class="page" id="next" style="float: right;"><i class="fas fa-angle-right"></i></div>
      </div>
    </div>
  </div>
</div>





