<% if estates.favorited_by?(current_user) %>
  <%= link_to estate_favorites_path(estates), method: :delete, remote: true do %>
    <button class="ui inverted red button" id="favorite_btn" style="background-color: #fe695e; color: white;">お気に入りから削除する</button>
  <% end %>
<% else %>
  <%= link_to estate_favorites_path(estates), method: :post, remote: true do %>
    <button class="ui inverted red button" id="favorite_btn">お気に入りに追加する</button>
  <% end %>
<% end %>
