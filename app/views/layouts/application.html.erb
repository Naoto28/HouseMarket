<!DOCTYPE html>
<html>


<!-- ヘッダー -->


<head>
  <title>HouseMarket</title>
    <%= csrf_meta_tags %>
     <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/3.4.1/js/swiper.min.js"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/3.4.1/css/swiper.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" >
    <link rel="stylesheet" type="text/css" src="semantic/semantic.min.css">
  <header>
    <% if user_signed_in? %>
      <nav class="navbar-expand-lg navbar-dark">
        <div class="container">
          <div class="main-header collapse navbar-collapse">
            <%= link_to root_path do %>
              <img class="logo" src="/logo1.png" alt="housemarket" height="70">
            <% end %>

            <ul class="nav-list navbar-nav text-uppercase ml-auto">
              <li class="nav-item" id="nav-items">
                <%= link_to 'サービスを知る', about_path, class: "nav-items" %>


<div class="ui floating labeled icon dropdown button id="dropdown-menu">
  <i class="far fa-caret-square-down icon" id="dropdown-icon" ></i>
  <span class="text">メインメニュー</span>
  <div class="menu" id="downmenu">
      <%= link_to user_path(current_user) do %>
        <div class="item dropdown-menus">
          <span class="text">マイページ</span>
        </div>
      <% end %>

      <%= link_to estates_path do %>
        <div class="item dropdown-menus">
          <span class="text">登録した不動産</span>
        </div>
      <% end %>

      <%= link_to favorites_path do %>
        <div class="item dropdown-menus">
          <span class="text">お気に入り</span>
        </div>
      <% end %>

      <%= link_to message_path(current_user) do %>
      <div class="item dropdown-menus">
        <span class="text">メッセージ</span>
      </div>
      <% end %>

      <%= link_to destroy_user_session_path, method: :delete do %>
      <div class="item dropdown-menus">
        <span class="text">ログアウト</span>
      </div>
      <% end %>
    </div>
  </div>
</div>
              </li>
            </ul>


          </div>
        </div>
      </nav>
    <% else %>
      <nav class="navbar-expand-lg navbar-dark">
        <div class="container">
          <div class="main-header collapse navbar-collapse">
            <%= link_to root_path do %>
              <img class="logo" src="/logo1.png" alt="housemarket" height="70">
            <% end %>
            <ul class="nav-list navbar-nav text-uppercase ml-auto">
              <li class="nav-item" id="nav-items">
                <%= link_to 'サービスを知る', about_path, class: "nav-items" %>
                <%= link_to '新規登録', new_user_registration_path, class: "nav-items" %>
                <%= link_to 'ログイン', new_user_session_path, class: "nav-items" %>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    <% end %>
  </header>
</head>



  <body>


    <%= yield %>





    <footer>
      <span class="footer-text clerefix">©みんなのハウスマーケット</span>
    </footer>


  </body>
</html>


